<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="0dp" android:color="@android:color/darker_gray" />
            <!--<corners android:radius="2dp" />-->
            <solid android:color="@android:color/black" />

        </shape>
    </item>

    <!-- This is for border bottom -->
    <item android:bottom="1.5dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="0.1dp" android:color="@android:color/black" />
            <!--<corners android:radius="2dp" />-->
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>